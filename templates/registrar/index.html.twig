{% extends 'base.html.twig' %}

{% block title %}Crear Usuario{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center text-primary">Registrar Usuario</h2>

            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label text-secondary'}}) }}
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre completo', 'style': 'border-color: #007bff;'}}) }}
                            {{ form_errors(form.nombre) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label text-secondary'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Correo electrónico', 'style': 'border-color: #007bff;'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            <label for="{{ form.password.vars.id }}" class="form-label text-secondary">Contraseña</label>
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Contraseña', 'style': 'border-color: #007bff;'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Crear usuario</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}